@{
}

@model Movie

<h1>Add a movie to the Joel Hilton Collection</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title"/>
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year"/>
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director"/>
    <br />
    <label asp-for="Rating">Rating</label> <!-- Use a dropdown menu (G, PG, PG-13, R) -->
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label> <!-- Yes/No --> <!-- Not required -->
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label> <!-- Not required -->
    <input asp-for="LentTo"/>
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex</label> <!-- Not required -->
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label> <!-- Limited to 25 characters --> <!-- Not required -->
    <input asp-for="Notes" maxlength="25"/>

    <br />

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>

</form>